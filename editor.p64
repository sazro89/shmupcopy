--[[pod_format="raw",created="2024-11-08 00:51:35",modified="2024-11-22 01:21:15",revision=1019]]
include("draw.lua")
include("update.lua")
include("tools.lua")
include("io.lua")

function _init()
	printh("new run")
	modify_text_display = create_gui()
	
	window{width = 200, height = 200}
	
	input_file = "myspr.pod"
	output_file = "myspr.pod"
	array_name = "myspr" -- is this array_name needed?
	data = fetch(input_file)

	debug = {}
	_drw = draw_table
	_upd = update_table
	menuitem(1, "export", export)
	
	curx = 1
	cury = 1
	scrolly = 0
	scrollx = 0
	scrollspeed = 4
end

function _draw()
	_drw()
	
	if current_page == "edit" then
		modify_text_display:draw_all()
	elseif current_page == "newline" then
		modify_text_display:draw_all()
	end
	
	-- debug --
	cursor(4, 4)
	color(8)
	for txt in all(debug) do
		print(txt)
	end
end

function _update()
	_upd()
	modify_text_display:update_all()
--	debug[1] = "x: " .. menu[cury][curx].x
--	debug[2] = "y: " .. menu[cury][curx].y
end

