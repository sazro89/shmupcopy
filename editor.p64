--[[pod_format="raw",created="2024-11-08 00:55:08",modified="2024-11-22 01:21:15",revision=1182]]
function update_table()
	refresh_table()
	
	--up
	if keyp("up") then
		cury = cury - 1
	end
	--down
	if keyp("down") then
		cury = cury + 1
	end
--	cury = mid(1,cury,#menu)
	cury = (cury-1) % (#menu) + 1
	
	--left
	if keyp("left") then
		curx = curx - 1
	end
	--right
	if keyp("right") then
		curx = curx + 1
	end
	curx = (curx-1) % (#menu[cury]) + 1
	
	local curmenu = menu[cury][curx]
		
	if curmenu then
		if curmenu.y + scrolly > (200 - 30) then
			scrolly = scrolly - scrollspeed
		end
		if curmenu.y + scrolly < 22 then
			scrolly = scrolly + scrollspeed
		end
		scrolly = min(0, scrolly)
		
		if curmenu.x + scrollx > (200 - 80) then
			scrollx = scrollx - scrollspeed
		end
		if curmenu.x + scrollx < 22 then
			scrollx = scrollx + scrollspeed
		end
		scrollx = min(0, scrollx)
	end
	
	-- selecting a cell
	if keyp("z") then
		mymenu = menu[cury][curx]
		-- editable cell selected
		if mymenu.cmd == "edit" then
			current_page = "edit"
			text_bar = spawntextbox()
			_upd = upd_type	
			text_bar:set_keyboard_focus(true)
			text_bar:set_text(tostring(mymenu.text))
			mymenu.data = tonum(mymenu.data)
		-- newline cell selected
		elseif mymenu.cmd == "newline" then
			add(data, { 0, 0, 0, 0, 0,})
		elseif mymenu.cmd == "newcell" then
			add(data[mymenu.cmdy],0)
		end
	end
end

function upd_type()

end

function spawntextbox(_i)
	local enter_mode = _i
	local editval
	printh("spawntextbox enter_mode == \"newline\": " .. ((_i == "newline") and "true" or "false"))
	local text_bar = modify_text_display:attach_text_editor{
		x = mymenu.x+14+scrollx, y = mymenu.y-1+scrolly,
		width = 16,
		height = 12,
		margin_top = 3,

		
		key_callback = {
			enter = function(enter_mode)
				editval = text_bar:get_text()[1]
				printh("callback enter_mode == \"newline\": " .. ((enter_mode == "newline") and "true" or "false"))
				if enter_mode == "newline" then
					local _el = {
						text = 0,
						key = editval,
						cmd = "edit",
						cmdx = j,
						cmdy = i,
						x = -30 + 32 * j,
						y = -11 + 13 * i,
						w = "      "
					}
					add(data,{_el})
				else
					data[cury][curx] = (editval) and editval or 0
				end
				removeAllChildren(modify_text_display)
				current_page = nil
				_upd = update_table
			end
		}
	}
	return text_bar
end
