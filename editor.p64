--[[pod_format="raw",created="2024-11-08 00:58:52",modified="2024-11-22 01:21:15",revision=900]]
function bgprint(txt,x,y,c)
	print("\#0"..txt,x,y,c)
end

function removeAllChildren(el)
	for child in all(el.child) do
		el:detach(child)
	end
end
